/* pages/edit-profile/index.wxss */
.container {
  padding: 32rpx;
  background-color: #F5F7FA;
  min-height: 100vh;
}

/* 头像 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #E0E0E0;
  margin-bottom: 24rpx;
}

.avatar-btn {
  font-size: 28rpx;
  color: #FF9F43;
  background: none;
  padding: 0;
  margin: 0;
  border: none;
}

.avatar-btn::after {
  border: none;
}

/* 分组 */
.section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666666;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
}

.form-desc {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
}

/* 性别选择 */
.gender-select {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.gender-option {
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #999999;
  background-color: #F5F5F5;
  margin-left: 16rpx;
}

.gender-option.active {
  color: #FFFFFF;
  background-color: #FF9F43;
}

/* 开关项 */
.toggle-item {
  justify-content: space-between;
}

.toggle-label {
  display: flex;
  align-items: center;
}

/* 选择器 */
.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.picker-arrow {
  margin-left: 16rpx;
  color: #999999;
  font-size: 32rpx;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
}

.btn::after {
  border: none;
}

.btn-cancel {
  background-color: #FFFFFF;
  color: #666666;
}

.btn-save {
  background-color: #FF9F43;
  color: #FFFFFF;
}
