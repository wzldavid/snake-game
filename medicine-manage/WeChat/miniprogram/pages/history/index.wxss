/* pages/history/index.wxss */

/* ===== 记录列表 ===== */
.record-list {
  padding-bottom: var(--space-lg);
}

.record-group {
  margin-bottom: var(--space-lg);
}

.group-date {
  font-weight: 500;
  margin-bottom: var(--space-md);
  padding-left: var(--space-md);
}

/* ===== 记录卡片 ===== */
.record-card {
  background: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  margin-bottom: var(--space-md);
  overflow: hidden;
  transition: all var(--transition-fast) ease;
}

.record-card:active {
  transform: scale(0.98);
}

.record-card-content {
  display: flex;
  align-items: center;
  padding: var(--space-lg);
}

.record-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--space-md);
  font-weight: bold;
  color: var(--white);
  flex-shrink: 0;
  box-shadow: var(--shadow-sm);
}

.record-icon.normal {
  background: linear-gradient(135deg, var(--success-color), #40C057);
}

.record-icon.abnormal {
  background: linear-gradient(135deg, var(--danger-color), #FF5252);
}

.record-content {
  flex: 1;
  min-width: 0;
}

.record-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-xs);
}

.record-type {
  color: var(--text-primary);
  font-weight: 500;
  margin-right: var(--space-sm);
}

.record-value {
  font-size: var(--font-xl);
  font-weight: bold;
  margin-bottom: var(--space-xs);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.record-unit {
  font-weight: normal;
  margin-left: var(--space-xs);
}

.record-sub {
  font-weight: normal;
  margin-left: var(--space-md);
}

.record-time {
  font-weight: normal;
}

/* ===== 记录操作 ===== */
.record-actions {
  display: flex;
  align-items: center;
  padding: 0 var(--space-md) var(--space-md);
  justify-content: flex-end;
  border-top: 2rpx solid var(--bg-color);
}

.delete-btn {
  color: var(--danger-color);
  padding: var(--space-sm) var(--space-md);
}

.delete-btn:active {
  background: var(--danger-color);
  color: var(--white);
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx var(--space-xl);
}

.empty-actions {
  display: flex;
  gap: var(--space-md);
  margin-top: var(--space-lg);
}

/* ===== 加载更多 ===== */
.load-more {
  text-align: center;
  padding: var(--space-lg);
  font-weight: 500;
  transition: all var(--transition-fast) ease;
}

.load-more:active {
  color: var(--primary-color);
}
