/* snake/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.game-container {
  margin-bottom: 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fff;
}

.snake-canvas {
  background-color: #f0f0f0;
}

.button-container {
  margin-bottom: 20rpx;
}

.game-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background-color: #FF9F43;
  color: white;
  border-radius: 40rpx;
  border: none;
}

.game-button:hover {
  background-color: #FF8C1A;
}

.score-container {
  margin-bottom: 30rpx;
}

.score-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.instructions {
  width: 100%;
  max-width: 300px;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
}

.instructions-text {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.instructions-detail {
  display: block;
  font-size: 20rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}