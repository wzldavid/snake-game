/* pages/trend-pressure/index.wxss */

/* ===== 统计网格 ===== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-md);
  margin-bottom: var(--space-lg);
}

.stat-item {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: var(--shadow-md);
}

.stat-label {
  margin-bottom: var(--space-xs);
  font-weight: 500;
}

.stat-value {
  margin-bottom: var(--space-xs);
}

.stat-unit {
  font-weight: normal;
}

/* ===== 图表区域 ===== */
.time-filter {
  display: flex;
  justify-content: center;
  gap: var(--space-md);
  margin-bottom: var(--space-md);
}

.filter-item {
  padding: var(--space-sm) var(--space-lg);
  background-color: var(--bg-color);
  border-radius: var(--radius-md);
  transition: all 0.3s;
}

.filter-item.active {
  background-color: var(--primary-color);
}

.filter-item.active .filter-text {
  color: var(--white);
}

.filter-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.chart-legend {
  display: flex;
  justify-content: center;
  gap: var(--space-md);
  margin-bottom: var(--space-md);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.legend-systolic {
  background-color: #4A90E2;
}

.legend-diastolic {
  background-color: #FFB800;
}

.legend-heart {
  background-color: #FF6B6B;
}

.legend-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.chart-scroll {
  width: 100%;
  overflow-x: auto;
}

.chart-canvas {
  width: 100%;
  height: 600rpx;
}

/* ===== 数据列表 ===== */
.data-list {
  display: flex;
  flex-direction: column;
}

.data-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-md) 0;
  border-bottom: 2rpx solid var(--border-color);
}

.data-item:last-child {
  border-bottom: none;
}

.data-date {
  flex: 1;
  font-weight: 500;
}

.data-values {
  display: flex;
  gap: var(--space-lg);
  flex: 1;
  justify-content: flex-end;
}

.data-value-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 60rpx;
}

.data-value-label {
  margin-bottom: var(--space-xs);
}

.data-value {
  font-weight: bold;
  font-size: 32rpx;
}

.data-abnormal {
  flex-shrink: 0;
}
