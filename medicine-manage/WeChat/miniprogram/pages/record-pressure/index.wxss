/* pages/record-pressure/index.wxss */

/* ===== 页面标题 ===== */
.page-header {
  text-align: center;
  padding: var(--space-lg) 0;
  margin-bottom: var(--space-md);
}

.page-title {
  display: block;
  font-size: var(--font-xxl);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--space-xs);
}

.page-subtitle {
  display: block;
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

/* ===== 血压输入区域 ===== */
.pressure-inputs {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: var(--space-lg) 0;
  gap: var(--space-md);
}

.pressure-input-group {
  display: flex;
  align-items: center;
  flex: 1;
}

.input-large {
  flex: 1;
  font-size: var(--font-title);
  font-weight: bold;
  color: var(--primary-color);
  background: var(--bg-color-dark);
  border: 3rpx solid var(--primary-color);
  border-radius: var(--radius-xl);
  padding: var(--space-lg);
  text-align: center;
  transition: all var(--transition-fast) ease;
}

.input-large:focus {
  background: var(--white);
  box-shadow: 0 0 0 4rpx var(--primary-fade);
}

.input-unit {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  margin-left: var(--space-sm);
  white-space: nowrap;
}

.pressure-separator {
  font-size: var(--font-title);
  font-weight: bold;
  color: var(--text-secondary);
  margin: 0 var(--space-sm);
}

/* ===== 其他输入区域 ===== */
.input-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: var(--space-lg) 0;
}

.input-section .input-large {
  flex: 1;
}

.input-tip {
  text-align: center;
  margin-top: var(--space-md);
  padding: var(--space-md);
  background: var(--bg-color);
  border-radius: var(--radius-md);
}

/* ===== 选择器 ===== */
.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-lg);
  background: var(--bg-color);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-lg);
  margin: var(--space-md) 0;
  transition: all var(--transition-fast) ease;
}

.picker:active {
  background: var(--bg-color-dark);
  border-color: var(--primary-color);
}

.picker-text {
  color: var(--text-primary);
}

.picker-arrow {
  color: var(--text-secondary);
}

/* ===== 照片操作 ===== */
.photo-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-md);
  margin: var(--space-md) 0;
}

.photo-btn {
  background: var(--bg-color);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--space-xl) var(--space-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 200rpx;
  transition: all var(--transition-fast) ease;
}

.photo-btn:active {
  background: var(--bg-color-dark);
  border-color: var(--primary-color);
  transform: scale(0.96);
}

.photo-icon {
  font-size: 72rpx;
  margin-bottom: var(--space-sm);
}

.photo-text {
  color: var(--text-primary);
  font-weight: 500;
}

.photo-preview {
  position: relative;
  margin-top: var(--space-lg);
  width: 100%;
  height: 480rpx;
  border-radius: var(--radius-lg);
  overflow: hidden;
  background: var(--bg-color);
  box-shadow: var(--shadow-md);
}

.preview-image {
  width: 100%;
  height: 100%;
}

.photo-remove {
  position: absolute;
  top: var(--space-md);
  right: var(--space-md);
  width: 72rpx;
  height: 72rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--white);
  box-shadow: var(--shadow-lg);
  transition: all var(--transition-fast) ease;
}

.photo-remove:active {
  transform: scale(0.9);
}

.recognizing {
  text-align: center;
  padding: var(--space-xl);
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-md);
}

.recognizing::before {
  content: '';
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--primary-color);
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ===== 底部操作 ===== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--white);
  padding: var(--space-lg);
  display: flex;
  gap: var(--space-md);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-primary-large {
  flex: 1;
  height: 120rpx;
  font-size: var(--font-lg);
  border-radius: var(--radius-round);
}

.container {
  padding-bottom: 180rpx;
}
